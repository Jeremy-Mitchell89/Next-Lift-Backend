enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission!]!
  benchPress: Int @default(value: "100")
  squat: Int @default(value: "100")
  deadLift: Int @default(value: "100")
  press: Int @default(value: "100")
}
type Weight {
  weight: Int!
  createdAt: DateTime!
  user: User!
}

type Movement {
  id: ID! @unique
  name: String! @unique
  description: String!
  primaryMuscleWorked: String!
  secondaryMuscleWorked: String
}

type Log {
  id: ID! @unique
  title: String!
  notes: String!
  movements: [Move]
  user: User
  createdAt: DateTime! @createdAt
}

type Move {
  id: ID! @unique
  name: String!
  weight: [Int]
  reps: [Int]
  log: Log!
}
